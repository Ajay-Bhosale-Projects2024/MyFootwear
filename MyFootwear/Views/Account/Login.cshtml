@model MyFootwear.Models.Login
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div style="color:blue;">
      <strong>@Html.ValidationSummary()</strong>
    </div>

    <div class="form-group">
        <label>Seller Name:</label>
        @Html.EditorFor(E =>E.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(E => E.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Password:</label>
        @Html.EditorFor(E => E.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(E => E.Password, "", new { @class = "text-danger" })
    </div>
    <br />
    <input type="submit" value="Submit" />
    <input type="reset" value="Reset" />
}
<div>
    Click Here To @Html.ActionLink("Register", "Register", "Account")
</div>
